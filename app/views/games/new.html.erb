<h2 class="text-center">New Game</h2>

<ul class="list-inline text-center">
  <% @letters.each do |letter| %>
    <li class="list-inline-item text-center"><%= letter %></li>
  <% end %>
</ul>

<div class="info text-center">What is the longest word you can find ? :</div>
<form class="form-inline ask text-center" action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input class="form-control col-6 textarea" type="text" name="word">
  <input class="btn btn-primary" type="submit" value="Play">
  <input id="grid" name="grid" type="hidden" value=<%= "'#{@letters.join}'" %> />
</form>
